    <record id="view_fsm_blackout_day_tree" model="ir.ui.view">
        <field name="name">fsm.blackout.day.tree</field>
        <field name="model">fsm.blackout.day</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="date" />
            </list>
        </field>
    </record>

    <record id="view_fsm_blackout_group_tree" model="ir.ui.view">
        <field name="name">fsm.blackout.group.tree</field>
        <field name="model">fsm.blackout.group</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="view_fsm_blackout_day_form" model="ir.ui.view">
        <field name="name">fsm.blackout.day.form</field>
        <field name="model">fsm.blackout.day</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="date" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_fsm_blackout_group_form" model="ir.ui.view">
        <field name="name">fsm.blackout.group.form</field>
        <field name="model">fsm.blackout.group</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="fsm_blackout_day_ids">
                            <list>
                                <field name="name" />
                                <field name="date" />
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fsm_blackout_days" model="ir.actions.act_window">
        <field name="name">Blackout Days</field>
        <field name="res_model">fsm.blackout.day</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
        Add a Field Service Blackout Day here.
      </p>
        </field>
    </record>

    <record id="action_fsm_blackout_groups" model="ir.actions.act_window">
        <field name="name">Blackout Groups</field>
        <field name="res_model">fsm.blackout.group</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
        Add a Field Service Blackout Group here.
      </p>
        </field>
    </record>
</odoo>
