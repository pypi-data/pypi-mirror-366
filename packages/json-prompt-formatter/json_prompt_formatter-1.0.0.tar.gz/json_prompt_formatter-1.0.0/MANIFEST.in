# Include documentation
include README.md
include LICENSE
include CHANGELOG.md

# Include configuration files
include requirements.txt
include .gitignore

# Include templates and example files
recursive-include templates *.json
recursive-include prompts *.txt
recursive-include examples *.json *.txt *.jsonl

# Include source code
recursive-include json_prompt_formatter *.py

# Exclude compiled files and cache
global-exclude *.pyc
global-exclude *.pyo
global-exclude *~
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store

# Exclude output directories
prune outputs/
prune build/
prune dist/
prune *.egg-info