# SocialMapper API Server Configuration
# Copy this file to .env and update the values as needed

# Census Bureau API Key (required for demographic data)
SOCIALMAPPER_API_CENSUS_API_KEY=your_census_api_key_here

# CORS Configuration (comma-separated list)
# Update to include your frontend URL
SOCIALMAPPER_API_CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8501

# Server Configuration
SOCIALMAPPER_API_HOST=0.0.0.0
SOCIALMAPPER_API_PORT=8000

# Job Processing Configuration
SOCIALMAPPER_API_MAX_CONCURRENT_JOBS=10
SOCIALMAPPER_API_RESULT_TTL_HOURS=24
SOCIALMAPPER_API_CLEANUP_INTERVAL_MINUTES=60

# Rate Limiting
SOCIALMAPPER_API_RATE_LIMIT_PER_MINUTE=60

# API Metadata
SOCIALMAPPER_API_API_TITLE=SocialMapper API
SOCIALMAPPER_API_API_VERSION=0.1.0

# API Authentication (optional)
SOCIALMAPPER_API_API_AUTH_ENABLED=false
SOCIALMAPPER_API_API_KEYS=

# Storage Configuration
SOCIALMAPPER_API_RESULT_STORAGE_PATH=./results

# External API Configuration
SOCIALMAPPER_API_OSM_API_TIMEOUT=30
SOCIALMAPPER_API_CENSUS_API_TIMEOUT=30

# Analysis Configuration
SOCIALMAPPER_API_DEFAULT_TRAVEL_TIME_MINUTES=15
SOCIALMAPPER_API_MAX_TRAVEL_TIME_MINUTES=60
SOCIALMAPPER_API_MAX_POI_TYPES_PER_REQUEST=10
SOCIALMAPPER_API_MAX_CENSUS_VARIABLES_PER_REQUEST=20

# Development/Debug Settings
SOCIALMAPPER_API_DEBUG_MODE=false
SOCIALMAPPER_API_LOG_LEVEL=INFO