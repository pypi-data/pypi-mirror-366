orchid:
  # Replace the value of the `root` key with the path of the 
  # `PythonApiLibs` directory beneath the Orchid installation
  # directory. (For your information, the `PythonApiLibs`
  # directory containing the version-specific Orchid binary
  # and configuration files, should be in a directory
  # like `ORCHID_ROOT/Orchid-2020.4.232/PythonApiLibs`.)
  root: c:/path-to/orchid/version/python-api-libs
  # Replace the value of the `training` key with the path to
  # the Orchid training data
  training_data: c:/path-to/orchid/training-data
