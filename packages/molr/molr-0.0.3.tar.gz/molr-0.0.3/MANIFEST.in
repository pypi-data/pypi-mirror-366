# Include the README
include README.md

# Include the license file
include LICENSE

# Include the requirements files
include requirements*.txt

# Include the Makefile
include Makefile

# Include type stubs
include py.typed
recursive-include molr *.pyi

# Include the data files
recursive-include molr/constants *.py

# Include test data
recursive-include tests *.py
recursive-include tests/data *

# Exclude compiled files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .DS_Store

# Exclude development files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude tox.ini
prune .github
prune docs
prune experiments