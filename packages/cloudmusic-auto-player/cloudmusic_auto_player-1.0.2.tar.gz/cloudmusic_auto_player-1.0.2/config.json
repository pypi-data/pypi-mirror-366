{
  "_comment": "MCP 客户端配置示例 - 请根据实际路径修改",
  "_environment_setup": {
    "description": "环境变量设置说明",
    "NETEASE_MUSIC_PATH": {
      "description": "网易云音乐客户端路径，用于每日推荐功能",
      "windows_example": "C:\\Program Files (x86)\\Netease\\CloudMusic\\cloudmusic.exe",
      "macos_example": "/Applications/NeteaseMusic.app/Contents/MacOS/NeteaseMusic",
      "setup_instructions": {
        "windows": "在系统环境变量中设置，或在启动命令前添加: set NETEASE_MUSIC_PATH=路径",
        "macos_linux": "在 ~/.bashrc 或 ~/.zshrc 中添加: export NETEASE_MUSIC_PATH=路径"
      }
    },
    "CHROMEDRIVER_PATH": {
      "description": "ChromeDriver可执行文件的绝对路径，用于每日推荐和私人漫游功能",
      "windows_example": "C:\\path\\to\\chromedriver.exe",
      "macos_example": "/opt/homebrew/bin/chromedriver",
      "linux_example": "/usr/local/bin/chromedriver",
      "setup_instructions": {
        "windows": "在系统环境变量中设置，或在启动命令前添加: set CHROMEDRIVER_PATH=路径",
        "macos_linux": "在 ~/.bashrc 或 ~/.zshrc 中添加: export CHROMEDRIVER_PATH=路径"
      },
      "notes": {
        "windows": "项目已包含ChromeDriver，默认使用内置版本",
        "macos": "需要手动安装: brew install chromedriver",
        "linux": "需要手动下载对应版本的ChromeDriver"
      }
    }
  },
  "mcpServers": {
    "auto-music-player": {
      "command": "uv",
      "args": [
        "run",
        "--project",
        "/path/to/CloudMusic_Auto_Player",
        "src/server.py"
      ],
      "cwd": "/path/to/CloudMusic_Auto_Player"
    }
  },
  "_examples": {
    "windows": {
      "auto-music-player": {
        "command": "uv",
        "args": [
          "run",
          "--project",
          "C:\\Users\\YourName\\CloudMusic_Auto_Player",
          "src/server.py"
        ],
        "cwd": "C:\\Users\\YourName\\CloudMusic_Auto_Player"
      }
    },
    "macos": {
      "auto-music-player": {
        "command": "uv",
        "args": [
          "run",
          "--project",
          "/Users/YourName/CloudMusic_Auto_Player",
          "src/server.py"
        ],
        "cwd": "/Users/YourName/CloudMusic_Auto_Player"
      }
    }
  }
}