# Ara AI Stock Analysis Platform - Environment Variables Template
# Copy this file to .env and customize as needed

# =============================================================================
# GENERAL SETTINGS
# =============================================================================

# Trading mode (true for paper trading, false for live trading)
PAPER_TRADING=true

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable verbose output by default (true/false)
VERBOSE_MODE=false

# =============================================================================
# PREDICTION SETTINGS
# =============================================================================

# Default number of days to predict (1-7)
DEFAULT_PREDICTION_DAYS=5

# Default training epochs (10-50, higher = more accurate but slower)
DEFAULT_EPOCHS=20

# Model confidence threshold (60-95, predictions below this are flagged)
CONFIDENCE_THRESHOLD=75

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Enable GPU acceleration if available (true/false)
ENABLE_GPU=true

# Maximum memory usage in MB (0 = unlimited)
MAX_MEMORY_MB=1024

# Enable parallel processing (true/false)
ENABLE_PARALLEL=true

# Cache duration in hours (0 = no cache)
CACHE_DURATION_HOURS=6

# =============================================================================
# DATA SETTINGS
# =============================================================================

# Yahoo Finance request timeout in seconds
YAHOO_TIMEOUT=30

# Maximum historical data days to fetch
MAX_HISTORICAL_DAYS=365

# Enable data validation (true/false)
ENABLE_DATA_VALIDATION=true

# =============================================================================
# OUTPUT SETTINGS
# =============================================================================

# Enable colored console output (true/false)
ENABLE_COLORS=true

# Enable progress bars (true/false)
ENABLE_PROGRESS_BARS=true

# Save predictions to CSV (true/false)
SAVE_PREDICTIONS=true

# Enable prediction accuracy tracking (true/false)
TRACK_ACCURACY=true

# =============================================================================
# ADVANCED SETTINGS (Optional)
# =============================================================================

# Custom model weights (comma-separated: rf,gb,lr,lstm)
# MODEL_WEIGHTS=0.4,0.4,0.1,0.1

# Enable experimental features (true/false)
# ENABLE_EXPERIMENTAL=false

# Custom data directory path
# DATA_DIRECTORY=./data

# Custom cache directory path
# CACHE_DIRECTORY=./cache

# =============================================================================
# EXTERNAL API KEYS (Optional - Not required for basic functionality)
# =============================================================================

# Alpha Vantage API key (for additional market data)
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# News API key (for sentiment analysis)
# NEWS_API_KEY=your_news_api_key_here

# Polygon.io API key (for real-time data)
# POLYGON_API_KEY=your_polygon_key_here

# =============================================================================
# NOTIFICATION SETTINGS (Optional)
# =============================================================================

# Enable email notifications (true/false)
# ENABLE_EMAIL_NOTIFICATIONS=false

# SMTP settings for email notifications
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# Webhook URL for notifications
# WEBHOOK_URL=https://hooks.slack.com/your/webhook/url

# =============================================================================
# NOTES
# =============================================================================

# 1. The system works perfectly without any API keys using Yahoo Finance
# 2. All settings have sensible defaults and are optional
# 3. GPU acceleration is automatically detected and used when available
# 4. Prediction accuracy is tracked automatically for continuous improvement
# 5. For production use, consider setting PAPER_TRADING=false only after thorough testing

# =============================================================================
# SECURITY NOTES
# =============================================================================

# - Never commit this file with real API keys to version control
# - Use environment variables in production environments
# - Rotate API keys regularly if using external services
# - Keep this file secure and limit access permissions