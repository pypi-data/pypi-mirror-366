{% raw %}{% extends "{% endraw %}{{ app_name }}{% raw %}/base.html" %}

{% block title %}{% endraw %}{{ model_name }}s{% raw %}{% endblock %}

{% block content %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>{% endraw %}{{ model_name }}s{% raw %}</h1>
            <a href="{% url '{% endraw %}{{ app_name }}:{{ model_name_lower }}-create{% raw %}' %}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New {% endraw %}{{ model_name }}{% raw %}
            </a>
        </div>

        {% if object_list %}
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    {% comment %}
                                    Replace these with actual model fields:
                                    <th>Title</th>
                                    <th>Created Date</th>
                                    {% endcomment %}
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for object in object_list %}
                                <tr>
                                    <td>{{ object.pk }}</td>
                                    {% comment %}
                                    Replace these with actual model fields:
                                    <td>{{ object.title }}</td>
                                    <td>{{ object.created_at|date:"M d, Y" }}</td>
                                    {% endcomment %}
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="{% url '{% endraw %}{{ app_name }}:{{ model_name_lower }}-detail{% raw %}' object.pk %}"
                                               class="btn btn-outline-primary" title="View">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{% url '{% endraw %}{{ app_name }}:{{ model_name_lower }}-update{% raw %}' object.pk %}"
                                               class="btn btn-outline-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="{% url '{% endraw %}{{ app_name }}:{{ model_name_lower }}-delete{% raw %}' object.pk %}"
                                               class="btn btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No {% endraw %}{{ model_name_lower }}s{% raw %} found</h5>
                    <p class="text-muted">Get started by creating your first {% endraw %}{{ model_name_lower }}{% raw %}.</p>
                    <a href="{% url '{% endraw %}{{ app_name }}:{{ model_name_lower }}-create{% raw %}' %}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add New {% endraw %}{{ model_name }}{% raw %}
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}{% endraw %}
