# 包含重要的项目文件
include README.md
include LICENSE
include CHANGELOG.md
include pyproject.toml
include setup.py

# 包含pocketflow包的所有Python文件
recursive-include pocketflow *.py
recursive-include pocketflow *.pyi
include pocketflow/py.typed

# 排除不需要的文件
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude .pytest_cache
global-exclude .coverage
global-exclude htmlcov

# 排除开发和测试相关文件
exclude .pre-commit-config.yaml
exclude Makefile
exclude activate.sh
recursive-exclude tests *
recursive-exclude .pytest_cache *
recursive-exclude htmlcov *
