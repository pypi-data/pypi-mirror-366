{#- Initialize a map of default values #}
{%- load_yaml as defaults %}

client_in_ports:
  - 8591
client_in_sources:
  - 0.0.0.0/0
installer_opts: '-i'
rpms:
  - MFEcma
  - MFErt.i686

{%- endload %}

{#- Define the mcafee map, merging pillar and default values #}
{%-
    set mcafee = salt['pillar.get'](
        'mcafee-agent:lookup',
        default=defaults,
        merge=True
    )
%}
