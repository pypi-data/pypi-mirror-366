        <field name="name">account.intrastat.statement.tree.view</field>
        <field name="model">account.intrastat.statement</field>
        <field name="arch" type="xml">
            <list>
                <field name="number" />
                <field name="date" />
                <field name="sale" />
                <field name="purchase" />
                <field name="fiscalyear" />
                <field name="exclude_optional_column_sect_1_3" />
                <field name="period_type" />
                <field name="period_number" />
                <field name="company_id" groups="base.group_multi_company" />
            </list>
        </field>
    </record>

    <record id="account_intrastat_statement_form_view" model="ir.ui.view">
        <field name="name">account.intrastat.statement.form.view</field>
        <field name="model">account.intrastat.statement</field>
        <field name="arch" type="xml">
            <form string="INTRASTAT Statement">
                <header>
                    <button name="compute_statement" string="Recompute" type="object" />
                    <button
                        name="%(l10n_it_intrastat_statement.action_wizard_wizard_account_intrastat_export_file)d"
                        string="Export File"
                        type="action"
                    />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="company_id" widget="selection" />
                            <field name="vat_taxpayer" />
                            <field name="date" />
                            <field name="fiscalyear" />
                            <field name="exclude_optional_column_sect_1_3" />
                            <field name="period_type" />
                            <field name="period_number" />
                            <field name="date_start" />
                            <field name="date_stop" />
                        </group>
                        <group>
                            <field name="number" />
                            <field name="content_type" />
                            <field name="special_cases" />
                            <field name="intrastat_custom_id" />
                            <field name="intrastat_vat_delegate" />
                            <field name="intrastat_name_delegate" />
                        </group>
                    </group>
                    <newline />
                    <group>
                        <group>
                            <field name="sale" />
                            <field name="purchase" />
                        </group>
                        <group />
                    </group>
                    <notebook>
                        <page string="Sales" invisible="not sale">
                            <group>
                                <group>
                                    <field
                                        name="sale_statement_sequence"
                                        string="Statement Sequence"
                                    />
                                </group>
                                <newlabel />
                                <group string="Goods Sale - Section 1">
                                    <field
                                        name="sale_section1_operation_number"
                                        string="Operation Count"
                                    />
                                    <field
                                        name="sale_section1_operation_amount"
                                        string="Operation Amount"
                                    />
                                </group>
                                <group string="Goods Adjustment - Section 2">
                                    <field
                                        name="sale_section2_operation_number"
                                        string="Operation Count"
                                    />
                                    <field
                                        name="sale_section2_operation_amount"
                                        string="Operation Amount"
                                    />
                                </group>
                                <newline />
                                <group string="Services Sale - Section 3">
                                    <field
                                        name="sale_section3_operation_number"
                                        string="Operation Count"
                                    />
                                    <field
                                        name="sale_section3_operation_amount"
                                        string="Operation Amount"
                                    />
                                </group>
                                <group string="Services Adjustment - Section 4">
                                    <field
                                        name="sale_section4_operation_number"
                                        string="Operation Count"
                                    />
                                    <field
                                        name="sale_section4_operation_amount"
                                        string="Operation Amount"
                                    />
                                </group>
                            </group>
                            <newline />
                            <notebook>
                                <page string="Goods Sale - Section 1">
                                    <field
                                        name="sale_section1_ids"
                                        nolabel="1"
                                        context="{'statement_id': id}"
                                    />
                                </page>
                                <page string="Goods Adjustment - Section 2">
                                    <field
                                        name="sale_section2_ids"
                                        nolabel="1"
                                        context="{'statement_id': id}"
                                    />
                                </page>
                                <page string="Services Sale - Section 3">
                                    <field
                                        name="sale_section3_ids"
                                        nolabel="1"
                                        context="{'statement_id': id} "
                                    />
                                </page>
                                <page string="Services Adjustment - Section 4">
                                    <field
                                        name="sale_section4_ids"
                                        nolabel="1"
                                        context="{'statement_id': id} "
                                    />
                                </page>
                            </notebook>
                        </page>
                        <page string="Purchases" invisible="not purchase">
                            <group>
                                <group>
                                    <field
                                        name="purchase_statement_sequence"
                                        string="Statement Sequence"
                                    />
                                </group>
                                <newlabel />
                                <group string="Goods Purchase - Section 1">
                                    <field
                                        name="purchase_section1_operation_number"
                                        string="Operation Count"
                                    />
                                    <field
                                        name="purchase_section1_operation_amount"
                                        string="Operation Amount"
                                    />
                                </group>
                                <group string="Goods Adjustment - Section 2">
                                    <field
                                        name="purchase_section2_operation_number"
                                        string="Operation Count"
                                    />
                                    <field
                                        name="purchase_section2_operation_amount"
                                        string="Operation Amount"
                                    />
                                </group>
                                <newline />
                                <group string="Services Purchase - Section 3">
                                    <field
                                        name="purchase_section3_operation_number"
                                        string="Operation Count"
                                    />
                                    <field
                                        name="purchase_section3_operation_amount"
                                        string="Operation Amount"
                                    />
                                </group>
                                <group string="Services Adjustment - Section 4">
                                    <field
                                        name="purchase_section4_operation_number"
                                        string="Operation Count"
                                    />
                                    <field
                                        name="purchase_section4_operation_amount"
                                        string="Operation Amount"
                                    />
                                </group>
                            </group>
                            <newline />
                            <notebook>
                                <page string="Goods Purchase - Section 1">
                                    <field
                                        name="purchase_section1_ids"
                                        nolabel="1"
                                        context="{'statement_id': id}"
                                    />
                                </page>
                                <page string="Goods Adjustment - Section 2">
                                    <field
                                        name="purchase_section2_ids"
                                        nolabel="1"
                                        context="{'statement_id': id}"
                                    />
                                </page>
                                <page string="Services Purchase - Section 3">
                                    <field
                                        name="purchase_section3_ids"
                                        nolabel="1"
                                        context="{'statement_id': id}"
                                    />
                                </page>
                                <page string="Services Adjustment - Section 4">
                                    <field
                                        name="purchase_section4_ids"
                                        nolabel="1"
                                        context="{'statement_id': id}"
                                    />
                                </page>
                            </notebook>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

