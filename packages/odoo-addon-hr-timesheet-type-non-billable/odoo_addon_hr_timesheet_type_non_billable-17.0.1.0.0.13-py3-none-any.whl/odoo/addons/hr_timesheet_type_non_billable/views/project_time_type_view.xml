<odoo>
    <record id="view_project_time_type_tree_inherit" model="ir.ui.view">
        <field name="name">project.time.type.tree.inherit</field>
        <field name="model">project.time.type</field>
        <field
            name="inherit_id"
            ref="hr_timesheet_time_type.view_project_time_type_tree"
        />
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='code']" position="after">
                <field name="non_billable" />
            </xpath>
        </field>
    </record>

    <record id="view_project_time_type_form_inherit" model="ir.ui.view">
        <field name="name">project.time.type.form.inherit</field>
        <field name="model">project.time.type</field>
        <field
            name="inherit_id"
            ref="hr_timesheet_time_type.view_project_time_type_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="non_billable" />
            </xpath>
        </field>
    </record>
</odoo>
