# TaskPriority AI MCP Server Configuration

# Required: Your TaskPriority API key (must start with tp_live_)
TASKPRIORITY_API_KEY=tp_live_your_api_key_here

# TaskPriority API URL (defaults to http://localhost:3000 for development)
# For production, use: https://api.taskpriority.ai
TASKPRIORITY_API_URL=http://localhost:3000

# API version (defaults to v1)
TASKPRIORITY_API_VERSION=v1

# Logging configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # Options: json, text

# MCP Server configuration
MCP_SERVER_NAME=taskpriority-mcp
MCP_SERVER_VERSION=1.0.0

# Performance settings
REQUEST_TIMEOUT=30  # Seconds
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=1.5

# Optional: Enable telemetry (for usage analytics)
ENABLE_TELEMETRY=false

# Optional: Enable debug mode (verbose logging)
DEBUG_MODE=false

# Connection pooling settings
CONNECTION_POOL_SIZE=10
CONNECTION_POOL_TIMEOUT=5

# AI Analysis polling settings
AI_ANALYSIS_POLL_INTERVAL=2  # Seconds
AI_ANALYSIS_MAX_WAIT_TIME=30  # Seconds