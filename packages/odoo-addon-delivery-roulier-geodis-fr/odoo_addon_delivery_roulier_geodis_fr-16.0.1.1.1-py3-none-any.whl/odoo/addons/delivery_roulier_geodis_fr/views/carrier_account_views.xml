<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_geodis_carrier_account_form" model="ir.ui.view">
        <field name="model">carrier.account</field>
        <field
            name="inherit_id"
            ref="delivery_carrier_account.carrier_account_view_form"
        />
        <field name="arch" type="xml">
            <field name="password" position="after">
                <field
                    name="geodis_fr_customer_id"
                    attrs="{'invisible': [('delivery_type', '!=', 'geodis_fr')], 'required': [('delivery_type', '=', 'geodis_fr')]}"
                />
                <field
                    name="geodis_fr_file_format"
                    attrs="{'invisible': [('delivery_type', '!=', 'geodis_fr')], 'required': [('delivery_type', '=', 'geodis_fr')]}"
                />
                <field
                    name="geodis_fr_tracking_account"
                    attrs="{'invisible': [('delivery_type', '!=', 'geodis_fr')]}"
                />
            </field>
        </field>
    </record>

</odoo>
