# Include the README and other important files
include README.md
include LICENSE
include CHANGELOG.md
include pyproject.toml
include requirements.txt
include requirements-dev.txt
include config.sample.json

# Include all Python files
recursive-include ai_helper_agent *.py

# Include any data files
recursive-include ai_helper_agent *.txt
recursive-include ai_helper_agent *.json
recursive-include ai_helper_agent *.yaml
recursive-include ai_helper_agent *.yml

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude .coverage
global-exclude .pytest_cache

# Exclude test files
prune tests
exclude test_*.py
exclude *_test.py