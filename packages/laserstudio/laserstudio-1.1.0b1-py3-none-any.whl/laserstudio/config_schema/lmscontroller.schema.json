{
  "$id": "lmscontroller.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ALPhANOV LMS Controller",
  "type": "object",
  "allOf": [
    {
      "properties": {
        "type": {
          "const": "LMSController"
        },
        "open_is_slidein": {
          "type": "boolean",
          "default": false,
          "description": "If true, the LMS controller 'open' state corresponds to a 'slide-in' motor position state."
        },
        "motor": {
          "type": "integer",
          "default": 1,
          "minimum": 1,
          "maximum": 3,
          "description": "The index of the motor used for this instrument."
        }
      }
    },
    {
      "$ref": "instrument.schema.json"
    },
    {
      "$ref": "serial.schema.json"
    }
  ]
}
