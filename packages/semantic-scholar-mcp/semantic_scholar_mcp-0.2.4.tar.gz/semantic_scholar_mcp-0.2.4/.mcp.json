{
  "mcpServers": {
    "semantic-scholar-dev": {
      "command": "uv",
      "args": [
        "run",
        "semantic-scholar-mcp"
      ],
      "env": {
        "DEBUG_MCP_MODE": "true",
        "LOG_MCP_MESSAGES": "true",
        "LOG_API_PAYLOADS": "true"
      }
    },
    "semantic-scholar-pypi": {
      "command": "uvx",
      "args": [
        "--force-reinstall",
        "semantic-scholar-mcp@latest"
      ]
    },
    "lsmcp-python": {
      "command": "npx",
      "args": [
        "-y",
        "@mizchi/lsmcp",
        "--bin=pylsp"
      ]
    },
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server"
      ]
    }
  }
}