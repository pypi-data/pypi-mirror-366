# MANIFEST.in for Tokker - Package distribution manifest

# Include essential project files
include README.md
include LICENSE
include pyproject.toml

# Exclude requirements.txt (dependencies are in pyproject.toml)
exclude requirements.txt

# Include the main package
recursive-include tokker *.py

# Include documentation files needed at runtime (guides and markdown)
recursive-include tokker *.md

# Exclude tests from the sdist
prune tokker/tests

# Exclude development and build artifacts
exclude .gitignore
exclude Makefile

# Exclude hidden files and directories / caches
global-exclude __pycache__/*
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store
global-exclude .coverage
global-exclude .coverage.*
global-exclude .pytest_cache/*
global-exclude .pytest_cache
global-exclude .mypy_cache/*
global-exclude .mypy_cache
global-exclude .ruff_cache/*
global-exclude .ruff_cache

# Exclude development directories and local envs
prune .git
prune .ropeproject
prune venv
prune env
prune build
prune dist
prune *.egg-info
prune .vscode
prune .idea

# Exclude documentation drafts
global-exclude *-docs/*
global-exclude docs-*/*

# Exclude temporary and editor swap files
global-exclude *.tmp
global-exclude *.temp
global-exclude *~
global-exclude *.swp
global-exclude *.swo
