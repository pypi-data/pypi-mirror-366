<odoo>

<record id="purchase.purchase_order_comp_rule" model="ir.rule">
    <field name="active" eval="0" />
</record>

<record id="purchase_order_internal_user_rule" model="ir.rule">
    <field name="name">Purchase Order - Internal Users</field>
    <field name="model_id" ref="purchase.model_purchase_order" />
    <field name="groups" eval="[(4, ref('base.group_user'))]" />
    <field name="domain_force">[('user_id','=',user.id)]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>

<record id="purchase_order_company_rule" model="ir.rule">
    <field name="name">Purchase Order - Responsible to company data</field>
    <field name="model_id" ref="purchase.model_purchase_order" />
    <field name="groups" eval="[(4, ref('purchase_order_company_group'))]" />
    <field name="domain_force">[('company_id','=',user.company_id.id)]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>

<record id="purchase_order_company_child_rule" model="ir.rule">
    <field
            name="name"
        >Purchase Order - Responsible to company and all child companies data
    </field>
    <field name="model_id" ref="purchase.model_purchase_order" />
    <field name="groups" eval="[(4, ref('purchase_order_company_child_group'))]" />
    <field name="domain_force">[('company_id','in',user.company_ids.ids)]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>

<record id="purchase_order_all_rule" model="ir.rule">
    <field name="name">Purchase Order - Responsible to all data</field>
    <field name="model_id" ref="purchase.model_purchase_order" />
    <field name="groups" eval="[(4, ref('purchase_order_all_group'))]" />
    <field name="domain_force">[(1,'=',1)]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>
</odoo>
