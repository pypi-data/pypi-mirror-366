{
  "mcp_servers": [
    {
      "name": "local_tools",
      "url": "localhost:3333",
      "auth": {
        "type": "bearer",
        "token": "your-token-here"
      },
      "namespaces": ["math", "data", "web", "file", "db"]
    },
    {
      "name": "cloud_tools",
      "url": "mcp.example.com",
      "auth": {
        "type": "api_key",
        "key": "your-api-key"
      },
      "namespaces": ["ml", "nlp", "vision"]
    }
  ],
  "queries": [
    "Calculate the square root of 144",
    "Search for recent AI developments",
    "Fetch user data from the API",
    "What is the meaning of life?",
    "Calculate fibonacci sequence up to 10 and search for fibonacci applications"
  ],
  "settings": {
    "timeout": 30,
    "max_retries": 3,
    "rate_limit": 10,
    "cache_ttl": 3600
  }
}