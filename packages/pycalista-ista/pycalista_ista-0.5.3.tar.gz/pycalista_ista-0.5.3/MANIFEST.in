include LICENSE
include README.md
include pyproject.toml
include setup.py

# Explicitly exclude all test files and data
prune tests*

# Exclude cache and build artifacts
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store

# Exclude virtual environments
global-exclude .env
global-exclude .venv
global-exclude venv
global-exclude env

# Exclude coverage reports
global-exclude .coverage
global-exclude htmlcov
