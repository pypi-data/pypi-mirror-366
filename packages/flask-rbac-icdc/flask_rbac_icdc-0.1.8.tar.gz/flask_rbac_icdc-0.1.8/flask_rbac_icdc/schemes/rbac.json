{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "roles": {
      "type": "object",
      "patternProperties": {
        "^[a-z][a-z0-9]*$": {
          "type": "object",
          "patternProperties": {
            "^[a-z][a-z0-9_.-]*$": {
              "type": "object",
              "properties": {
                "permissions": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "filters": {
                  "type": "object",
                  "additionalProperties": { "type": "string" }
                }
              },
              "required": ["permissions", "filters"],
              "additionalProperties": true
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["roles"],
  "additionalProperties": true
}
