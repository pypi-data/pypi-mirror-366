{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Tests",
			"type": "shell",
			"command": "uv run pytest tests/ -v",
			"group": "test",
			"isBackground": false,
			"problemMatcher": [
				"$python"
			]
		},
		{
			"label": "Run Tests with Coverage",
			"type": "shell",
			"command": "uv run pytest tests/ --cov=src --cov-report=html --cov-report=term-missing -v",
			"group": "test",
			"isBackground": false,
			"problemMatcher": [
				"$python"
			]
		},
		{
			"label": "Run Specific Test File",
			"type": "shell",
			"command": "uv run pytest ${relativeFile} -v",
			"group": "test",
			"isBackground": false,
			"problemMatcher": [
				"$python"
			]
		},
		{
			"label": "Run Tests (Fast)",
			"type": "shell",
			"command": "uv run pytest tests/ -x",
			"group": "test",
			"isBackground": false,
			"problemMatcher": [
				"$python"
			]
		}
	]
}